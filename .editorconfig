root = true

[*]
charset = utf-8
max_line_length = 120
end_of_line = lf
indent_style = space
insert_final_newline = false
indent_size = 4
trim_trailing_whitespace = true

[*.scss]
insert_final_newline = true
indent_size = 2

[*.js]
insert_final_newline = true
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[/bitrix/**]
charset = unset
max_line_length = unset
end_of_line = unset
indent_style = unset
insert_final_newline = unset
indent_size = unset
trim_trailing_whitespace = unset
